{
  "name": "chat-service",
  "version": "1.0.0",
  "description": "Real-time chat service",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/auto-instrumentations-node": "^0.40.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.45.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "axios": "^1.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "express-winston": "^4.2.0",
    "helmet": "^7.0.0",
    "kafkajs": "^2.2.4",
    "mongoose": "^7.5.0",
    "prom-client": "^15.1.0",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "chai": "^6.2.0",
    "eslint": "^9.39.1",
    "jest": "^29.7.0",
    "mocha": "^11.7.4",
    "nodemon": "^3.0.1",
    "nyc": "^17.1.0",
    "sinon": "^21.0.0",
    "socket.io-client": "^4.7.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
